<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://struts.apache.org/dtds/struts-config_1_2.dtd">
<!--
	This is the Struts configuration file for the
	Tiles-documentation application
-->


<struts-config>

	<!-- ========== Form Mapping Definitions =============================== -->
	<form-beans>
		<form-bean name="userInformationForm"
			type="fr.umlv.ir3.emagine.user.UserInformationForm" />
	</form-beans>

	<!-- ========== Action Mapping Definitions =============================== -->
	<!-- The standard administrative actions available with Tiles -->
	<!-- These would be either omitted or protected by security constraints -->
	<!-- in a real application deployment -->

	<action-mappings>
	   <action path="/mainLayout" forward="common.layout.mainLayout" />
	   <!-- student --> 
	   <action path="/studentVisuAdress" forward="student.studentVisuAdress" />
	   <action path="/studentSearch" forward="student.studentSearch" />
	   <action path="/studentVisuSituation" forward="student.studentVisuSituation" />
	   <action path="/studentVisuStatus" forward="student.studentVisuStatus" />
	   <action path="/studentTutorAdd" forward="student.studentTutorAdd" />
	   <action path="/studentCompanyAdd" forward="student.studentCompanyAdd" />
	   <action path="/studentOnglet" forward="student.studentOnglet" />
	   <action path="/studentVisuSchooling" forward="student.studentVisuSchooling" />
	   <action path="/studentVisuEvent" forward="student.studentVisuEvent" />
	   <action path="/studentVisuAbsence" forward="student.studentVisuAbsence" />
	   <action path="/studentAbsenceModif" forward="student.studentAbsenceModif" />
	   <action path="/studentAbsenceAdd" forward="student.studentAbsenceAdd" />
	   <!-- teacher -->
	   <action path="/teacherSearch" forward="teacher.teacherSearch" />
	   <action path="/teacherCreate" forward="teacher.teacherCreate" />
	   <action path="/teacherVisuInfo" forward="teacher.teacherVisuInfo" />
	   <action path="/teacherOnglet" forward="teacher.teacherOnglet" />
       <action path="/teacherStudentAdd" forward="teacher.teacherStudentAdd" />
       <!-- company -->
	   <action path="/companySearch" forward="company.companySearch" />
   	   <action path="/actorStudentAdd" forward="company.actorStudentAdd" />
   	   <action path="/actorVisuInfo" forward="company.actorVisuInfo" />
	   <action path="/companyVisuActor" forward="company.companyVisuActor" />
	   <action path="/companyVisuEvent" forward="company.companyVisuEvent" />
	   <action path="/companyVisuInfo" forward="company.companyVisuInfo" />
	   <action path="/companyVisuPost" forward="company.companyVisuPost" />
	   <action path="/companyOnglet" forward="company.companyOnglet" />
	   <action path="/postCreate" forward="company.postCreate" />
	   <action path="/postVisu" forward="company.postVisu" />
	   <action path="/actorCreate" forward="company.actorCreate" />   
	   <!-- recruitment -->
	   <action path="/candidateSearch" forward="recruitment.candidateSearch" />
	   <action path="/candidateCreate" forward="recruitment.candidateCreate" />
	   <action path="/candidateOnglet" forward="recruitment.candidateOnglet" />
	   <action path="/candidateVisuInfo" forward="recruitment.candidateVisuInfo" />
	   <action path="/centerDetail" forward="recruitment.centerDetail" />
	   <action path="/centerList" forward="recruitment.centerList" />
	   <action path="/roomModif" forward="recruitment.roomModif" />
	   <action path="/roomAdd" forward="recruitment.roomAdd" />
	   <action path="/bringingTogether" forward="recruitment.bringingTogether" />
	   <!-- mail -->
	   <action path="/mailSearch" forward="mail.mailSearch" />
	   <!-- statistic -->
	   <action path="/statisticsCreate" forward="statistics.statisticsCreate" />
	   <action path="/statisticsVisu" forward="statistics.statisticsVisu" />
	   <action path="/statisticsModif" forward="statistics.statisticsModif" />
       <!-- administration -->
	   <action path="/userSearch" forward="administration.userSearch" />
       
		<action path="/userCreate"
			type="fr.umlv.ir3.emagine.user.UserModifyAction"
			name="userInformationForm" 
			parameter="dispatchAction"
			scope="session">
			
			<forward name="success"
				path="/administration/userInformation.jsp" />
		</action>
		
		<action path="/userModify"
			type="fr.umlv.ir3.emagine.user.UserModifyAction"
			name="userInformationForm"
			parameter="dispatchAction"
			scope="session">
			
			<forward name="success"
				path="/administration/userInformation.jsp" />
		</action>

		<action path="/userShowInformation"
			type="fr.umlv.ir3.emagine.user.UserShowInformationAction"
			name="userInformationForm" scope="session">
			<forward name="success"
				path="/administration/userInformation.jsp" />
		</action>
	</action-mappings>

	<!-- ========== Request Processor Declaration =================== -->
	<!-- The Tiles framework use a special request processor. YOU DON'T -->
	<!-- NEED TO DECLARE IT yourself (The TilesPlugin do it for you), unless -->
	<!-- you have created your own request processor. In this later case, -->
	<!-- your request processor should extend the org.apache.struts.tiles.TilesRequestProcessor -->
	<!-- and be declared here -->
	<!--  <controller processorClass="your.RequestProcessor"  />  -->

	<!-- ========== Associated Messages Ressource settings =================== -->
	<!-- Uncomment the following if your webserver complains about a missing resources. -->
	<!-- This resource is not needed by Tiles or this example. It is just a trick to make -->
	<!-- Struts happy with some web server. -->
	<!-- <message-resources parameter="org.apache.struts.webapp.tiles.dev1-1.ApplicationResources" null="false" /> -->


	<!-- ========== TilesPlugin settings ===================================== -->
	<!-- You should declare this plugin if you want to use Tiles with an XML definition file. -->
	<plug-in className="org.apache.struts.tiles.TilesPlugin">

		<!-- Path to XML definition file -->
		<set-property property="definitions-config"
			value="/WEB-INF/tiles-defs.xml" />

		<!-- Set Module-awareness to true -->
		<set-property property="moduleAware" value="true" />
	</plug-in>

</struts-config>
